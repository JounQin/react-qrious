{
  "name": "@rxts/react",
  "version": "0.1.0",
  "description": "React",
  "repository": "git@github.com:rx-ts/react.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "parcel demo/index.html",
    "lint:es": "EFF_NO_LINK_RULES=true eslint . --ext js,md,mdx,ts,tsx -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint": "run-p lint:*",
    "build:es": "tsc -b --force",
    "build:bundle": "rollup -c",
    "build:bundle:min": "cross-env NODE_ENV=production rollup -c",
    "build:demo": "parcel build demo/index.html --out-dir dist",
    "build": "rimraf dist packages/*/lib && run-p build:**",
    "serve": "serve dist",
    "type-coverage": "type-coverage --cache --ignore-catch --detail --ignore-files *.d.ts --strict"
  },
  "devDependencies": {
    "@1stg/babel-preset": "^0.4.2",
    "@1stg/eslint-config": "^0.5.1",
    "@1stg/husky-config": "^0.2.0",
    "@1stg/lint-staged": "^0.4.3",
    "@1stg/prettier-config": "^0.1.1",
    "@1stg/tsconfig": "^0.2.0",
    "@1stg/tslint-config": "^0.1.2",
    "@babel/core": "^7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@rxts/react-rx": "link:packages/react-rx/src",
    "@rxts/react-storage": "link:packages/react-storage/src",
    "@types/classnames": "^2.2.9",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.3",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "autoprefixer": "^9.6.1",
    "classnames": "^2.2.6",
    "core-js": "^3.2.1",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.3.0",
    "eslint-formatter-friendly": "^7.0.0",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.5",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.3",
    "postcss": "^7.0.17",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "remark-preset-lint-markdown-style-guide": "^2.1.3",
    "remark-preset-lint-recommended": "^3.0.3",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.3",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript": "^1.0.1",
    "rxjs": "^6.5.2",
    "serve": "^11.1.0",
    "todomvc-app-css": "^2.2.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "type-coverage": "^2.2.0",
    "typescript": "^3.6.2"
  },
  "babel": {
    "presets": [
      "@1stg"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintIgnore": [
    ".cache",
    ".parcel-cache",
    "CHANGELOG.md",
    "dist",
    "lib"
  ],
  "prettier": "@1stg/prettier-config",
  "renovate": {
    "extends": "@1stg"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-markdown-style-guide",
      [
        "lint-list-item-spacing",
        false
      ],
      [
        "lint-list-item-indent",
        false
      ],
      [
        "lint-ordered-list-marker-value",
        false
      ],
      [
        "lint-emphasis-marker",
        "_"
      ],
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "lint-table-pipe-alignment",
        false
      ]
    ]
  },
  "typeCoverage": {
    "atLeast": 100
  }
}
